
pipeline {
    agent {label "master"}
    stages {
        stage('One') {
                steps {
                        echo 'Hi, this is Quratulain from RC'
			
                }
        }
	{
	agent {label "slave-1"}
	    stage('Two'){
		    
		steps {
			input('Do you want to proceed?')
        }
	    }
	    }
        stage('Three') {
                when {
                        not {
                                branch "master"
                        }
                }
                steps {
			echo "Hello"
                        }
        }
        stage('Four') {
                parallel {
                        stage('Unit Test') {
                                steps{
                                        echo "Running the unit test..."
                                }
                        }
                       
			}
        }
    }
}
